<% content_for :title do %>Edit string brand<% end %>
<h2>Edit string brand</h2>
<br>
<form action="/strings/brands/<%= @string_brand.slug %>" method="POST">
    <input type="hidden" name="_method" value="PATCH">
    <label for="name"><b>Name</b></label><br>
    <input type="text" name="name" id="name" value="<%= @string_brand.name %>" required><br><br>
    <input type="submit" value="Update" class="btn btn-success">
</form>
<br>
<hr>
<h3>Delete string brand</h3>
<br>
<p><b>Warning:</b> deleting a string brand will delete all associated racquets and matches. This cannot be undone.</p>
<form action="/strings/brands/<%= @string_brand.slug %>" method="POST">
    <input type="hidden" name="_method" value="DELETE">
    <input type="submit" onclick="return confirm('Warning: deleting a string brand will delete all associated racquets and matches. This cannot be undone.\n\nAre you sure you wish to delete the string brand?');" value="Delete string brand" class="btn btn-danger">
</form>