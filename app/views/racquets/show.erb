<% content_for :title do %>Racquets - <%= "#{@racquet.frame_brand.name} #{@racquet.frame_model.name} x #{@racquet.string_brand.name} #{@racquet.string_model.name}" %><% end %>
<h2><%= "#{@racquet.frame_brand.name} #{@racquet.frame_model.name} x #{@racquet.string_brand.name} #{@racquet.string_model.name}" %></h2>
<br>
<b>Sport:</b> <a href="/sports/<%= @racquet.sport.slug %>"><%= @racquet.sport.name %></a><br>
<b>Frame brand:</b> <a href="/frames/brands/<%= @racquet.frame_brand.slug %>"><%= @racquet.frame_brand.name %></a><br>
<b>Frame model:</b> <a href="/frames/models/<%= @racquet.frame_model.slug %>"><%= @racquet.frame_model.name %></a><br>
<b>String brand:</b> <a href="/strings/brands/<%= @racquet.string_brand.slug %>"><%= @racquet.string_brand.name %></a><br>
<b>String model:</b> <a href="/strings/models/<%= @racquet.string_model.slug %>"><%= @racquet.string_model.name %></a>
<br><br>
<% if !@matches.empty? %>
    <h3>Matches</h3>
    <ul>
    <% @matches.each do |match| %>
        <%= "<li>#{formatted_date(match, "long")}: <a href=\"/matches/#{match.id}\">#{match.result.name.downcase} vs #{match.opponent.name}</a></li>" %>
    <% end %>
    </ul>
<% end %>
<br>
<a href="/racquets/<%= @racquet.id %>/edit"><button type="button" class="btn btn-primary">Edit racquet</button></a>
